<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context="com.agus.hendrik.activity.LoginActivity">


    <LinearLayout
        android:id="@+id/viewLogo"
        android:layout_width="380dp"
        android:layout_height="242dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:srcCompat="@mipmap/ic_logo_bvj" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/wendy_one"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/biru"
            android:textSize="22sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/viewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />
    <!--<TextView
        android:id="@+id/no_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_login"
        android:layout_below="@+id/viewLogo"
        android:layout_alignStart="@+id/btn_login"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="+62"
        android:textSize="18sp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLogo"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:layout_toEndOf="@+id/no_id"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="@+id/btn_reques_opt"
            android:hint="Enter your mobile number"
            android:inputType="phone"
            android:drawableEnd="@drawable/ic_phone"
            android:maxLength="12"
            android:digits="0123456789"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_username"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/button"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="17sp" />-->

    <TextView
        android:id="@+id/with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="Login with account Google"
        android:textColor="@color/biru"
        android:textSize="14sp" />


        <ImageView
            android:id="@+id/sign_in_google"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/button_login_google"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/with"
            android:scaleType="fitXY"
            android:foregroundGravity="center" />
</RelativeLayout>