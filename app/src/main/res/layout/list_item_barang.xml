<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/namaBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/fotoBarang"
            android:text="nama" />

        <TextView
            android:id="@+id/ukuranBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaBarang"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/fotoBarang"
            android:text="ukuran"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/merkBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ukuranBarang"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/fotoBarang"
            android:background="@drawable/button"
            android:padding="4dp"
            android:text="merk"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoBarang"
            android:layout_width="129dp"
            android:layout_height="137dp"
            android:src="@drawable/ic_profil" />

        <Button
            android:id="@+id/btn_open"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/fotoBarang"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/button_yellow_green"
            android:text="Detail"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>