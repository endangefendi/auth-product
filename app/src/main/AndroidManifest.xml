<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.agus.hendrik.myapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_bvj"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_bvj"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity android:name="com.agus.hendrik.activity.EditAdminActicity"/>
        <activity android:name="com.agus.hendrik.activity.EditKategoriActivity" />
        <activity android:name="com.agus.hendrik.activity.DashboadAdmin" />
        <activity android:name="com.agus.hendrik.activity.DetailBarangActivity" />
        <activity android:name="com.agus.hendrik.activity.CreateActivity" />
        <activity android:name="com.agus.hendrik.activity.BarangActivity" />
        <activity android:name="com.agus.hendrik.activity.ViewFotoActivity" />
        <activity android:name="com.agus.hendrik.activity.LoginActivity" />
        <activity android:name="com.agus.hendrik.activity.ScanCode" />
        <activity android:name="com.agus.hendrik.activity.VerifyPhoneActivity" />
        <activity android:name="com.agus.hendrik.activity.MainActivity" />
        <activity android:name="com.agus.hendrik.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>